<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/tvHelpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang Aplikasi"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvHelpContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tebak Gambar: Komputer adalah aplikasi kuis edukatif yang menguji seberapa baik kamu mengenali perangkat keras, perangkat lunak, dan istilah komputer melalui gambar. Aplikasi ini cocok untuk pelajar, mahasiswa, atau siapa saja yang ingin belajar dunia teknologi dengan cara menyenangkan!"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:lineSpacingExtra="5dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â¬… Kembali ke Menu Utama"
        android:backgroundTint="#FFFFFF"
        android:textColor="#000000"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:elevation="4dp" />
</LinearLayout>
